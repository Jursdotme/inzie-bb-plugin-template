{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss tailwind.css -o build/style.css --watch\"  \"live-server ./\"",
    "development": "cross-env NODE_ENV=development postcss tailwind.css -o build/style.css",
    "production": "cross-env NODE_ENV=production postcss tailwind.css -o build/style.css",
    "start": "npm run serve"
  },
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "tailwindcss": "^1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^6.1.2"
  }
}
